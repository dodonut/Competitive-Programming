{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++ -g -Wall -std=c++11 ${file} -o \"${fileDirname}/a.out\"",
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "absolute"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
    },
    {
      "label": "build and run < >",
      "type": "shell",
      "command": "g++ -g -Wall -std=c++11 ${file} -o \"${fileDirname}/a.out\" && \"${fileDirname}/a.out\" < \"${fileDirname}/input.txt\" > \"${fileDirname}/out.txt\"",
      "args": [],
      "group": "build",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "absolute"
        ]
      },
    },
    {
      "label": "build and run <",
      "type": "shell",
      "command": "g++ -g -Wall ${file} -o \"${fileDirname}/a.out\" && \"${fileDirname}/a.out\" < \"${fileDirname}/input.txt\"",
      "args": [],
      "group": "build",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "absolute"
        ]
      },
    }
  ]
}